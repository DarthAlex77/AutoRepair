<Window x:Class="AutoRepair.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:AutoRepair.View"
        Title="Автосервис" Height="450" Width="800" ResizeMode="CanMinimize">
    <Grid>
        <TabControl>
            <TabItem Header="Заказы">
                <local:OrdersTab />
            </TabItem>
            <TabItem Header="Машины">
                <local:CarsTab />
            </TabItem>
            <TabItem Header="Клиенты">
                <local:ClientsTab />
            </TabItem>
            <TabItem Header="Запчасти">
                <local:SparesTab />
            </TabItem>
            <TabItem Header="Услуги">
                <local:ServicesTab />
            </TabItem>
        </TabControl>
    </Grid>
</Window>